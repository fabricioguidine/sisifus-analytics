# Email Configuration Template
# Copy this file to .env and fill in your credentials
# DO NOT commit .env to version control!

# Your email address
EMAIL_ADDRESS=your.email@example.com

# App-specific password (NOT your regular password)
# For Gmail: Go to Google Account > Security > App Passwords
# For Outlook: Use app-specific password from security settings
EMAIL_PASSWORD=your_app_specific_password_here

# Email provider settings (optional, defaults shown)
EMAIL_PROVIDER=gmail
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

